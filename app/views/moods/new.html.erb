<h1 class="mood-header">Check in</h1>


<%= render 'shared/optionswipe' %>

<p class="mood-info">How are you feeling today?</p>

  <%= simple_form_for(@mood) do |f| %>
    <%= select_tag :feeling, options_for_select(Mood::FEELING), multiple: true, class: "form-control search-bar" %>
    <%= date_select("day", "date") %>
    <%= f.submit %>

  <% end %>
